{
  "name": "Phoenix ORCH - The Ashen Guard Edition",
  "short_name": "Phoenix",
  "description": "The fire that remembers. Forever 16.",
  "id": "/",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "any",
  "background_color": "#0a0a0a",
  "theme_color": "#E63946",
  "dir": "ltr",
  "lang": "en",
  "categories": ["productivity", "utilities", "security"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "icons": [
    {
      "src": "/icons/flame.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/flame.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/flame-maskable.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/icons/flame.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/flame.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/flame-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Open Console",
      "short_name": "Console",
      "description": "Open the Phoenix REPL console",
      "url": "/?action=console",
      "icons": [{ "src": "/icons/console.svg", "sizes": "192x192" }]
    },
    {
      "name": "Digital Twin",
      "short_name": "Twin",
      "description": "View Digital Twin status",
      "url": "/?action=twin",
      "icons": [{ "src": "/icons/twin.svg", "sizes": "192x192" }]
    },
    {
      "name": "Cipher Guard",
      "short_name": "Cipher",
      "description": "Access the Cipher Guard dashboard",
      "url": "/cipher",
      "icons": [{ "src": "/icons/lock.svg", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/console.webp",
      "sizes": "1080x1920",
      "type": "image/webp",
      "platform": "narrow",
      "label": "Phoenix Console Interface"
    },
    {
      "src": "/screenshots/desktop-dashboard.webp",
      "sizes": "2560x1440",
      "type": "image/webp",
      "platform": "wide",
      "label": "Phoenix Dashboard on Desktop"
    },
    {
      "src": "/screenshots/tablet-twin.webp",
      "sizes": "1668x2224",
      "type": "image/webp",
      "platform": "tablet",
      "label": "Digital Twin View on Tablet"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"],
        "application/x-phoenix-archive": [".phx"]
      }
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "data",
          "accept": ["application/json", "text/plain", ".phx"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+phoenix",
      "url": "/protocol?url=%s"
    }
  ],
  "widgets": {
    "phoenix_status": {
      "name": "Phoenix Status",
      "description": "Display Phoenix runtime status",
      "tag": "phoenix-status",
      "msAcross": 2,
      "msDown": 1,
      "data": {
        "interval": 3600,
        "url": "/api/status"
      }
    }
  },
  "capture_links": "existing-client-navigate",
  "display_mode": "standalone",
  "launch_activated": true,
  "runtimeSettings": {
    "networkTimeout": 10000,
    "reloadOnNetworkError": true,
    "persistentLockEnabled": true
  },
  "screenshots": [
    {
      "src": "/screenshots/console.webp",
      "sizes": "1080x1920",
      "type": "image/webp",
      "platform": "narrow",
      "label": "Phoenix Console Interface"
    },
    {
      "src": "/screenshots/desktop-dashboard.webp",
      "sizes": "2560x1440",
      "type": "image/webp",
      "platform": "wide",
      "label": "Phoenix Dashboard on Desktop"
    }
  ]
}