'use client';

import React, { useRef, useEffect } from 'react';

interface MatrixRainProps {
  intensity?: number;
  speed?: number;
}

const MatrixRain: React.FC<MatrixRainProps> = ({ intensity = 0.5, speed = 1 }) => {
  const canvasRef = useRef<HTMLCanvasElement>(null);

  useEffect(() => {
    const canvas = canvasRef.current;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // Set canvas dimensions to match window
    const resizeCanvas = () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    };

    // Initial resize
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    // Matrix characters
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789ƸƹΩ∅θ∏∑√∂←∴∠⊕␣⌫⊗∆∇⊥∃≡'.split('');

    // Configure columns
    const fontSize = 14;
    const columns = Math.ceil(canvas.width / fontSize * (intensity * 2));

    // Drops - one per column, with random starting position
    const drops: number[] = [];
    for (let i = 0; i < columns; i++) {
      drops[i] = Math.floor(Math.random() * canvas.height / fontSize);
    }

    // Drawing animation
    const draw = () => {
      // Set semi-transparent black background
      ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Set text styles
      ctx.fillStyle = '#E63946'; // Phoenix blood color
      ctx.font = `${fontSize}px monospace`;

      // Draw chars
      for (let i = 0; i < drops.length; i++) {
        // Random character
        const char = chars[Math.floor(Math.random() * chars.length)];
        
        // x coordinate of the drop (column * fontSize)
        const x = i * fontSize;
        
        // y coordinate of the drop (position in the drops array * fontSize)
        const y = drops[i] * fontSize;
        
        ctx.fillText(char, x, y);

        // Send the drop to the top randomly after it has crossed the screen
        // also randomizing the reset to make rain scattered
        if (y > canvas.height && Math.random() > 0.99) {
          drops[i] = 0;
        }

        // Increment y coordinate for next frame
        drops[i] += speed * 0.5;
      }
    };

    // Start the animation loop
    const interval = setInterval(draw, 35);

    // Clean up
    return () => {
      clearInterval(interval);
      window.removeEventListener('resize', resizeCanvas);
    };
  }, [intensity, speed]); // Re-run if intensity or speed change

  return (
    <canvas 
      ref={canvasRef} 
      className="phoenix-rain absolute top-0 left-0 w-full h-full pointer-events-none"
      style={{ opacity: intensity * 0.6 }}
    />
  );
};

export default MatrixRain;